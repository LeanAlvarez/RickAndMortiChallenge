<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="155dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardElevation="5dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp">

            <ImageView
                android:id="@+id/ivRM"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher" />


            <TextView
                android:id="@+id/tv_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/ivRM"
                android:layout_toRightOf="@+id/ivRM"
                android:text="Name"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold" />


            <LinearLayout
                android:id="@+id/Ll_types"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/ivRM"
                android:layout_toEndOf="@id/ivRM"
                android:layout_below="@id/tv_Name"
                >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="o"
                android:textColor="@color/lightGray"
                />

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alive"
                android:textSize="15sp"
                android:textColor="@color/lightGray"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                />
                <TextView
                    android:id="@+id/tv_separate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="18sp"
                    android:textColor="@color/lightGray"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    />

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Human"
                    android:textSize="15sp"
                    android:textColor="@color/lightGray"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    />
            </LinearLayout>


            <TextView
                android:id="@+id/tv_locationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Ll_types"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@id/ivRM"
                android:layout_toRightOf="@+id/ivRM"
                android:text="Last known location:"
                android:textColor="@color/lightGray"
                android:textSize="15sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_locationText"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@id/ivRM"
                android:layout_toRightOf="@+id/ivRM"
                android:text="some planet"
                android:textColor="@color/lightGray"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_firstCapText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_locationText"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="18dp"
                android:layout_toEndOf="@id/ivRM"
                android:layout_toRightOf="@+id/ivRM"
                android:text="First seen in:"
                android:textColor="@color/lightGray"
                android:textSize="15sp"
                android:textStyle="italic" />
            <TextView
                android:id="@+id/tv_firstCap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_firstCapText"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@id/ivRM"
                android:layout_toRightOf="@+id/ivRM"
                android:text="First Cap"
                android:textColor="@color/lightGray"
                android:textSize="15sp" />



        </RelativeLayout>




    </androidx.cardview.widget.CardView>




</androidx.constraintlayout.widget.ConstraintLayout>